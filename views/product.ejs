<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Admin hanskering | Produk</title>

    <!-- Custom fonts for this template-->
    <link href="/sbadmin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="/sbadmin/css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%- include('sidebar.ejs') %>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <%- include('topbar.ejs') %>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Produk</h1>
                    </div>

                    <button id="btn-create" class="d-sm-inline-block btn btn-sm btn-primary shadow-sm mb-1"><i
                        class="fas fa-plus fa-sm text-white-50"></i> Tambahkan Produk Baru
                    </button>

                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Data Produk</h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <p>Menampilkan <%= start_limit %> - <%= end_limit %> dari <%= data_length %> produk</p>
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Nama Produk</th>
                                            <th>Brand</th>
                                            <th>Harga</th>
                                            <th>Aksi</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% data.forEach(entry => { %>
                                            <tr id=<%= entry.kode_barang %>>
                                                <td style="cursor: pointer;" onclick="clickBarang(event)"><%= entry.nama_barang %></td>
                                                <td><%= entry.brand %></td>
                                                <td><%= entry.harga %></td>
                                                <td>
                                                    <button class="d-sm-inline-block btn btn-sm btn-info shadow-sm mb-1" onclick="clickEdit(event)">
                                                        Edit
                                                    </button>
                                                    <button class="d-sm-inline-block btn btn-sm btn-success shadow-sm mb-1" onclick="clickRestock(event)">
                                                        Restock
                                                    </button>
                                                    <button class="d-sm-inline-block btn btn-sm btn-danger shadow-sm mb-1" onclick="clickHapus(event)">
                                                        Hapus
                                                    </button>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                                <div class="btn-group" role="group" aria-label="Basic example">
                                    <input id="page-input" type="number" class="form-control form-control-sm rounded-0 col-sm-2" placeholder=<%= page %>>

                                    <% if(previous === false) { %> 
                                        <button id="button-previous" disabled type="button" class="col-sm-4 rounded-0 btn btn-sm btn-primary">Sebelumnya</button> 
                                    <% } else { %>
                                        <button id="button-previous" type="button" class="col-sm-4 rounded-0 btn btn-sm btn-primary">Sebelumnya</button> 
                                    <% } %>

                                    <% if(next === false) { %> 
                                        <button id="button-next" disabled type="button" class="col-sm-4 rounded-0 btn btn-sm btn-primary">Selanjutnya</button> 
                                    <% } else { %>
                                        <button id="button-next" type="button" class="col-sm-4 rounded-0 btn btn-sm btn-primary">Selanjutnya</button> 
                                    <% } %>
                                  </div>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <%- include('footer.ejs') %>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Bootstrap core JavaScript-->
    <script src="/sbadmin/vendor/jquery/jquery.min.js"></script>
    <script src="/sbadmin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="/sbadmin/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="/sbadmin/js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <!-- <script src="/sbadmin/vendor/datatables/jquery.dataTables.min.js"></script> -->
    <!-- <script src="/sbadmin/vendor/datatables/dataTables.bootstrap4.min.js"></script> -->

    <!-- Page level custom scripts -->
    <!-- <script src="/sbadmin/js/demo/datatables-demo.js"></script> -->

    <script src="/javascripts/product.js"></script>

</body>

</html>