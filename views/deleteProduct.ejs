<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Admin hanskering | Detail Produk</title>

    <!-- Custom fonts for this template-->
    <link href="/sbadmin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="/sbadmin/css/sb-admin-2.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/viewProduct.css">

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%- include('sidebar.ejs') %>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <%- include('topbar.ejs') %>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid" id="form-wrapper">

                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Hapus Produk</h1>
                    </div>
                    
                    <div id="brand-part" class="mb-3">
                        <label class="form-label">Brand</label>
                        <p class="form-control"><%= data.brand %></p>
                    </div>

                    <div class="mb-3">
                        <label for="nama-barang" class="form-label">Nama Barang</label>
                        <p class="form-control"><%= data.nama_barang %></p>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Size</label>
                        <div class="d-flex mb-1">
                            <label for="37" class="my-auto mr-1">37</label>
                            <p class="form-control my-auto mx-2 col-sm-1"><%= data.size[37] %></p>
                            <p class="my-auto">pcs</p>
                        </div>
                        <div class="d-flex mb-1">
                            <label for="38" class="my-auto mr-1">38</label>
                            <p class="form-control my-auto mx-2 col-sm-1"><%= data.size[38] %></p>
                            <p class="my-auto">pcs</p>
                        </div>
                        <div class="d-flex mb-1">
                            <label for="39" class="my-auto mr-1">39</label>
                            <p class="form-control my-auto mx-2 col-sm-1"><%= data.size[39] %></p>
                            <p class="my-auto">pcs</p>
                        </div>
                        <div class="d-flex mb-1">
                            <label for="40" class="my-auto mr-1">40</label>
                            <p class="form-control my-auto mx-2 col-sm-1"><%= data.size[40] %></p>
                            <p class="my-auto">pcs</p>
                        </div>
                        <div class="d-flex mb-1">
                            <label for="41" class="my-auto mr-1">41</label>
                            <p class="form-control my-auto mx-2 col-sm-1"><%= data.size[41] %></p>
                            <p class="my-auto">pcs</p>
                        </div>
                        <div class="d-flex mb-1">
                            <label for="42" class="my-auto mr-1">42</label>
                            <p class="form-control my-auto mx-2 col-sm-1"><%= data.size[42] %></p>
                            <p class="my-auto">pcs</p>
                        </div>
                        <div class="d-flex mb-1">
                            <label for="43" class="my-auto mr-1">43</label>
                            <p class="form-control my-auto mx-2 col-sm-1"><%= data.size[43] %></p>
                            <p class="my-auto">pcs</p>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="upload" class="form-label">Picture</label><br>
                        <img id="foto_produk" src=<%= data.foto %> alt="foto_produk">
                    </div>

                    <div class="mb-4">
                        <label for="harga" class="form-label">Harga</label>
                        <p class="form-control"><%= data.harga %></p>
                    </div>

                    <button type="button" class="btn btn-danger w-100" id="btn-delete">Hapus Produk Ini</button>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <%- include('footer.ejs') %>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Bootstrap core JavaScript-->
    <script src="/sbadmin/vendor/jquery/jquery.min.js"></script>
    <script src="/sbadmin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="/sbadmin/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="/sbadmin/js/sb-admin-2.min.js"></script>

    <script src="/javascripts/deleteProduct.js"></script>

</body>

</html>